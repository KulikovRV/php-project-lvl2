#!/usr/bin/env php

<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use function Differ\Differ\genDiff;

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]

DOC;

require('/Users/kulikovroman/code-study/php-hexlet/php-project-lvl2/vendor/docopt/docopt/src/docopt.php');
$params = array(
    'version' => 'gendiff 1.0',
);
$args = Docopt::handle($doc, $params);
$argsInArr = get_object_vars($args);
$firstFile = $argsInArr['args']['<firstFile>'];
$secondFile =  $argsInArr['args']['<secondFile>'];
$result = genDiff($firstFile, $secondFile);

echo "{\n";
foreach ($result as $k=>$v)
    echo " $k".': '.$v.PHP_EOL;
echo '}';

// echo (json_encode($result, JSON_PRETTY_PRINT));